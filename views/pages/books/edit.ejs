<form class="update" action="/books/<%= oneBook.id %>?_method=PUT" method="post">
  <input type="text" name="title" value="<%= oneBook.title %>"/>
  <input type="text" name="author" value="<%= oneBook.author %>"/>
  <input type="text" name="isbn" value="<%= oneBook.isbn %>"/>
  <input type="text" name="image_url" value="<%= oneBook.image_url %>" />
  <input type="text" name="description" value="<%= oneBook.description %>" />
  <button>Update Book</button>
</form>

