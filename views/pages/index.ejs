<%- include('../layout/head.ejs') %>

  <body>
    <header>
      <div>Best Books!</div>
      <div><%= bookCollection.length %> Saved Books | <a href="/searches/new">Search Books</a></div>
    </header>
    <main>
      <ul>
        <% bookCollection.forEach(book => { %>
          <li>
            <img src="<%= book.image_url %>" alt="<% book.title %>"/>
            <h3><%= book.title %></h3>
            <h4><%= book.author %></h4>
            <a href="/books/<%=book.id%>">View Details</a>
          </li>
        <% }) %>
      </ul>
    </main>
    <footer></footer>
  </body>
</html>